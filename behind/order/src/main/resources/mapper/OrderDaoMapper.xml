<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.adai.dao.OrderDao">

    <sql id="Table_order">
         `order`
    </sql>

    <sql id="Table_column">
        <trim prefix="(" suffix=")" suffixOverrides=",">
            itemId,category,`name`,price,location,`count`,imgPath,account,address,receiver,phone,
            <if test=" color != null ">
                color,
            </if>
            <if test=" size != null ">
                `size`,
            </if>
        </trim>
    </sql>

    <sql id="Column_ALL_Values">
        <trim prefix="values(" suffix=")" suffixOverrides=",">
            #{itemId},#{category},#{name},#{price},#{location},#{count},#{imgPath},
            #{account},#{address},#{receiver},#{phone},
            <if test=" color != null ">
                #{color},
            </if>
            <if test=" size != null ">
                #{size},
            </if>
        </trim>
    </sql>

    <insert id="insertOrder" parameterType="com.adai.vo.request.InsertOrder">
        INSERT INTO
        <include refid="Table_order"/>
        <include refid="Table_column"/>
        <include refid="Column_ALL_Values"/>
    </insert>


</mapper>